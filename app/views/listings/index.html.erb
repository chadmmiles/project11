<p id="notice"><%= notice %></p>

<h1>Listing Listings</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Square footage</th>
      <th>Beds</th>
      <th>Bathrooms</th>
      <th>Date on market</th>
      <th>For sale by owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.address %></td>
        <td><%= listing.square_footage %></td>
        <td><%= listing.beds %></td>
        <td><%= listing.bathrooms %></td>
        <td><%= listing.date_on_market %></td>
        <td><%= listing.for_sale_by_owner %></td>
        <td><%= link_to 'Show', listing %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

